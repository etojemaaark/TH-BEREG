		.territory-slider
			.territory-slider__item
				.territory-slider-item
					img(src="static/images/content/territory-slide1.jpg", alt="")
			.territory-slider__item
				.territory-slider-item
					img(src="static/images/content/territory-slide2.jpg", alt="")
			.territory-slider__item
				.territory-slider-item
