			.territory-slider__item
				.territory-slider-item
					img(src="static/images/content/territory-slide3.jpg", alt="")

		.territory-controls
			.territory-controls__progress
				.territory-progress(role="progressbar" aria-valuemin="0" aria-valuemax="100")
					span.territory-progress__label
			.territory-controls__arrows
				button.advantages-controls__btn.territory-controls__prev(type="button")
					+icon('prev')
				button.advantages-controls__btn.territory-controls__next(type="button")
					+icon('next')

